<resources>

    <style name="StreamVideoTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="streamVideoCallControlsViewStyle">@style/Stream.CallControls</item>
        <item name="streamVideoCallDetailsViewStyle">@style/Stream.CallDetails</item>
        <item name="streamVideoCallParticipantViewStyle">@style/Stream.CallParticipant</item>
        <item name="streamVideoCallViewStyle">@style/Stream.CallView</item>
        <item name="streamVideoIncomingViewStyle">@style/Stream.IncomingCall</item>
        <item name="streamVideoOutgoingViewStyle">@style/Stream.OutgoingCall</item>
        <item name="streamVideoPictureInPictureViewStyle">@style/Stream.PictureInPicture</item>
        <item name="streamVideoScreenShareStyle">@style/Stream.ScreenShare</item>
        <item name="streamVideoCallAppBarStyle">@style/Stream.CallAppBar</item>
        <item name="streamVideoCallContainerStyle">@style/Stream.CallContainer</item>
    </style>

    <style name="Stream">
        <!--Common styles properties-->
    </style>

    <style name="Stream.CallControls" parent="Stream">
        <item name="streamVideoCallControlsBackgroundColor">@color/stream_bars_background</item>
        <item name="streamVideoCallControlsButtonSize">@dimen/callControlButtonSize</item>
    </style>

    <style name="Stream.CallDetails" parent="Stream">
        <item name="streamVideoCallDetailsAvatarSize">@dimen/callAvatarSize</item>
        <item name="streamVideoCallDetailsDirectCallAvatarSize">@dimen/singleAvatarSize</item>
        <item name="streamVideoCallDetailsAvatarSpacing">20dp</item>
        <item name="streamVideoCallDetailsDirectCallParticipantInfoTextSize">
            @dimen/directCallUserNameTextSize
        </item>
        <item name="streamVideoCallDetailsParticipantsInfoTextSize">
            @dimen/groupCallUserNameTextSize
        </item>
        <item name="streamVideoCallDetailsParticipantsInfoTextColor">
            @color/stream_text_high_emphasis
        </item>
        <item name="streamVideoCallDetailsParticipantsInfoTextStyle">normal</item>
        <item name="streamVideoCallDetailsCallStateTextSize">@dimen/onCallStatusTextSize</item>
        <item name="streamVideoCallDetailsCallStateTextColor">@color/stream_text_high_emphasis</item>
        <item name="streamVideoCallDetailsCallStateTextStyle">bold</item>
        <item name="streamVideoCallDetailsStateTextAlpha">@dimen/onCallStatusTextAlpha</item>
    </style>

    <style name="Stream.CallParticipant" parent="Stream">
        <item name="streamVideoCallParticipantLabelAlignment">bottom_start</item>
        <item name="streamVideoCallParticipantLabelMargin">@dimen/callParticipantLabelPadding</item>
        <item name="streamVideoCallParticipantLabelBackgroundColor">@color/stream_video_dark_gray</item>
        <item name="streamVideoCallParticipantLabelTextSize">@dimen/bodyTextSize</item>
        <item name="streamVideoCallParticipantLabelTextColor">@color/stream_video_white</item>
        <item name="streamVideoCallParticipantLabelTextStyle">normal</item>
        <item name="streamVideoCallParticipantActiveSpeakerBorderColor">@color/stream_info_accent</item>
        <item name="streamVideoCallParticipantMicrophoneOffIcon">@drawable/ic_mic_off</item>
        <item name="streamVideoCallParticipantMicrophoneOffTint">@color/stream_error_accent</item>
        <item name="streamVideoCallParticipantAudioLevelTint">@color/stream_video_white</item>
        <item name="streamVideoCallParticipantElevation">0dp</item>
        <item name="streamVideoCallParticipantCornerRadius">0dp</item>
    </style>

    <style name="Stream.CallParticipant.Grid" parent="Stream.CallParticipant">
        <!-- Leaves the default styling -->
    </style>

    <style name="Stream.CallParticipant.List" parent="Stream.CallParticipant">
        <item name="streamVideoCallParticipantCornerRadius">@dimen/screenShareParticipantsRadius</item>
    </style>

    <style name="Stream.CallView" parent="Stream">
        <item name="streamVideoCallViewGridParticipantStyle">@style/Stream.CallParticipant.Grid</item>
        <item name="streamVideoCallViewListParticipantStyle">@style/Stream.CallParticipant.List</item>
    </style>

    <style name="Stream.IncomingCall" parent="Stream">
        <item name="streamVideoIncomingCallScreenBackground">@drawable/bg_call</item>
        <item name="streamVideoIncomingCallAcceptCallIcon">@drawable/ic_call</item>
        <item name="streamVideoIncomingCallAcceptCallIconTint">@color/stream_video_white</item>
        <item name="streamVideoIncomingCallAcceptCallBackground">@drawable/stream_video_bg_call_control_option</item>
        <item name="streamVideoIncomingCallAcceptCallBackgroundTint">@color/stream_info_accent</item>
        <item name="streamVideoIncomingCallDeclineCallIcon">@drawable/ic_call_end</item>
        <item name="streamVideoIncomingCallDeclineCallIconTint">@color/stream_video_white</item>
        <item name="streamVideoIncomingCallDeclineCallBackground">@drawable/stream_video_bg_call_control_option</item>
        <item name="streamVideoIncomingCallDeclineCallBackgroundTint">@color/stream_error_accent</item>
        <item name="streamVideoIncomingCallVideoEnabledIcon">@drawable/ic_videocam_on</item>
        <item name="streamVideoIncomingCallVideoDisabledIcon">@drawable/ic_videocam_off</item>
        <item name="streamVideoIncomingCallVideoIconTint">@color/stream_text_high_emphasis</item>
        <item name="streamVideoIncomingCallVideoBackground">@drawable/stream_video_bg_call_control_option</item>
        <item name="streamVideoIncomingCallVideoBackgroundTint">@color/stream_app_background</item>
        <item name="streamVideoIncomingCallVideoBackgroundAlphaEnabled">@dimen/buttonToggleOnAlpha</item>
        <item name="streamVideoIncomingCallVideoBackgroundAlphaDisabled">@dimen/buttonToggleOffAlpha
        </item>
    </style>

    <style name="Stream.OutgoingCall" parent="Stream">
        <item name="streamVideoOutgoingCallScreenBackground">@drawable/bg_call</item>
        <item name="streamVideoOutgoingCallCancelCallIcon">@drawable/ic_call_end</item>
        <item name="streamVideoOutgoingCallCancelCallIconTint">@color/stream_video_white</item>
        <item name="streamVideoOutgoingCallCancelCallBackground">@drawable/stream_video_bg_call_control_option</item>
        <item name="streamVideoOutgoingCallCancelCallBackgroundTint">@color/stream_error_accent</item>
        <item name="streamVideoOutgoingCallVideoEnabledIcon">@drawable/ic_videocam_on</item>
        <item name="streamVideoOutgoingCallVideoDisabledIcon">@drawable/ic_videocam_off</item>
        <item name="streamVideoOutgoingCallMicrophoneEnabledIcon">@drawable/ic_mic_on</item>
        <item name="streamVideoOutgoingCallMicrophoneDisabledIcon">@drawable/ic_mic_off</item>
        <item name="streamVideoOutgoingCallMediaControlIconTint">@color/stream_text_high_emphasis</item>
        <item name="streamVideoOutgoingCallMediaButtonBackground">@drawable/stream_video_bg_call_control_option</item>
        <item name="streamVideoOutgoingCallMediaButtonBackgroundTint">@color/stream_app_background</item>
    </style>

    <style name="Stream.PictureInPicture" parent="Stream">
    </style>

    <style name="Stream.ScreenShare" parent="Stream">
    </style>

    <style name="Stream.CallAppBar" parent="Stream">
    </style>

    <style name="Stream.CallContainer" parent="Stream">
    </style>


</resources>