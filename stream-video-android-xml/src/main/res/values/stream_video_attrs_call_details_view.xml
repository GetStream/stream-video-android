<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CallDetailsView">
        <!-- Avatar size for group calls -->
        <attr name="streamVideoCallDetailsAvatarSize" format="dimension|reference" />
        <!-- Avatar size for direct calls -->
        <attr name="streamVideoCallDetailsDirectCallAvatarSize" format="dimension|reference" />
        <!-- Avatar spacing for group calls -->
        <attr name="streamVideoCallDetailsAvatarSpacing" format="dimension|reference" />

        <!-- Direct call info text size -->
        <attr name="streamVideoCallDetailsDirectCallParticipantInfoTextSize" format="dimension|reference" />
        <!-- Group info text style -->
        <attr name="streamVideoCallDetailsParticipantsInfoTextSize" format="dimension|reference" />
        <attr name="streamVideoCallDetailsParticipantsInfoTextColor" format="color|reference" />
        <attr name="streamVideoCallDetailsParticipantsInfoFontAsset" format="reference" />
        <attr name="streamVideoCallDetailsParticipantsInfoFont" format="reference" />
        <attr name="streamVideoCallDetailsParticipantsInfoTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Call state text style attributes -->
        <attr name="streamVideoCallDetailsCallStateTextSize" format="dimension|reference" />
        <attr name="streamVideoCallDetailsCallStateTextColor" format="color|reference" />
        <attr name="streamVideoCallDetailsCallStateFontAsset" format="reference" />
        <attr name="streamVideoCallDetailsCallStateFont" format="reference" />
        <attr name="streamVideoCallDetailsCallStateTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="streamVideoCallDetailsStateTextAlpha" format="float|reference" />

    </declare-styleable>
</resources>